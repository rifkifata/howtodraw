<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Gradient background -->
    <gradient
        android:type="linear"
        android:angle="135"
        android:startColor="#FFE5F1"
        android:centerColor="#E8F4FD"
        android:endColor="#F0E8FF" />
    
    <!-- Rounded corners -->
    <corners android:radius="20dp" />
    
    <!-- Border -->
    <stroke
        android:width="3dp"
        android:color="#FFB6C1" />
    
    <!-- Shadow effect -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />

</shape> 