<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="center">

        <!-- Step Number Badge -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <!-- Background Circle -->
            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/step_number_background"
                android:alpha="0.9" />

            <!-- Step Number Text -->
            <TextView
                android:id="@+id/stepNumberText"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:fontFamily="sans-serif-light" />

        </FrameLayout>

        <!-- Step Image Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="500dp"
            android:maxHeight="750dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/image_background"
            android:padding="6dp">

            <!-- Step Image -->
            <ImageView
                android:id="@+id/stepImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:contentDescription="Tutorial Step"
                android:background="@android:color/transparent" />

            <!-- Decorative Corner Elements -->
            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="top|start"
                android:background="@drawable/corner_decoration"
                android:rotation="0" />

            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="top|end"
                android:background="@drawable/corner_decoration"
                android:rotation="90" />

            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="bottom|start"
                android:background="@drawable/corner_decoration"
                android:rotation="270" />

            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/corner_decoration"
                android:rotation="180" />

        </FrameLayout>

        <!-- Step Description Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="#F8F9FA"
            android:layout_marginBottom="6dp">

            <TextView
                android:id="@+id/stepDescriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi langkah tutorial"
                android:textSize="16sp"
                android:textColor="#2C3E50"
                android:gravity="center"
                android:padding="12dp"
                android:lineSpacingExtra="4dp"
                android:fontFamily="sans-serif-light" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView> 